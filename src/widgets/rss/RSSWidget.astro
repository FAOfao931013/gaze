---
/**
 * RSS Widget Content Component
 * Renders RSS feed items (content only, no container)
 * Container and header are handled by Widget.astro
 */

import type { WidgetProps } from '../../types/widget'
import type { RSSData } from './types'

interface Props extends WidgetProps<RSSData> {}

const { data } = Astro.props
---

{data && (
  <>
    <div class="rss-items space-y-4">
      {data.items.map((item) => (
        <article class="rss-item">
          <a
            href={item.link}
            target="_blank"
            rel="noopener noreferrer"
            class="block hover:bg-white/5 rounded-md p-3 -mx-3 transition-colors"
          >
            <div class="flex gap-3">
              {item.image && (
                <div class="shrink-0">
                  <img
                    src={item.image}
                    alt={item.title}
                    class="w-20 h-20 object-cover rounded-md bg-white/5"
                    loading="lazy"
                  />
                </div>
              )}
              <div class="flex-1 min-w-0">
                <h3 class="text-base font-medium text-white/90 mb-1 hover:text-blue-400 transition-colors">
                  {item.title}
                </h3>
                {item.description && (
                  <p class="text-sm text-white/60 line-clamp-2 mb-2">
                    {item.description}
                  </p>
                )}
                <time class="text-xs text-white/40">
                  {new Date(item.pubDate).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                  })}
                </time>
              </div>
            </div>
          </a>
        </article>
      ))}
    </div>

    {data.items.length === 0 && (
      <div class="empty-state text-center py-8">
        <p class="text-white/40">No items available</p>
      </div>
    )}
  </>
)}

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
