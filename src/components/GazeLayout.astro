---
import type { Page } from '../types/gaze'
import type { WidgetConfig, WidgetProps } from '../types/widget'
import { getWidthValue } from '../utils/gaze'
import Widget from './Widget.astro'
import { WidgetError } from './WidgetError'

interface Props {
  page: Page
  widgetDataMap: Map<string, WidgetProps>
}

const { page, widgetDataMap } = Astro.props
const maxWidth = getWidthValue(page.width)

// Helper to generate unique slug for widget
const generateSlug = (config: WidgetConfig, index: number): string => {
  if (config.slug) return config.slug
  return `${config.type}-${index}`
}
---

<div class="gaze-page min-h-screen w-full">
  <div class="page-container mx-auto px-4 py-8" style={`max-width: ${maxWidth}`}>
    {/* Head Widgets - Full Width */}
    {page.headWidgets && page.headWidgets.length > 0 && (
      <div class="head-widgets mb-8">
        {page.headWidgets.map((widgetConfig, index) => {
          const slug = generateSlug(widgetConfig, index)
          const widgetProps = widgetDataMap.get(slug)

          if (!widgetProps) {
            return (
              <div class="mb-4 glass rounded-lg p-4 text-white/40">
                Widget "{widgetConfig.type}" not found
              </div>
            )
          }

          if (widgetProps.error) {
            return (
              <div class="mb-4">
                <WidgetError />
              </div>
            )
          }

          return (
            <div class="mb-4">
              <Widget {...widgetProps} />
            </div>
          )
        })}
      </div>
    )}

    {/* Column Layout */}
    <div class="columns-container flex flex-col md:flex-row gap-6">
      {(() => {
        let widgetIndex = (page.headWidgets?.length || 0)

        return page.columns.map((column) => (
          <div
            class={`column ${
              column.size === 'small'
                ? 'column-small w-full md:w-75 shrink-0'
                : 'column-full w-full flex-1'
            }`}
            data-column-size={column.size}
          >
            {/* Widgets in Column */}
            {column.widgets && column.widgets.length > 0 && (
              <div class="column-widgets space-y-4">
                {column.widgets.map((widgetConfig) => {
                  const slug = generateSlug(widgetConfig, widgetIndex++)
                  const widgetProps = widgetDataMap.get(slug)

                  if (!widgetProps) {
                    return (
                      <div class="glass rounded-lg p-4 text-white/40">
                        Widget "{widgetConfig.type}" not found
                      </div>
                    )
                  }

                  if (widgetProps.error) {
                    return (
                      <div class="mb-4">
                        <WidgetError />
                      </div>
                    )
                  }

                  return <Widget {...widgetProps} />
                })}
              </div>
            )}
          </div>
        ))
      })()}
    </div>
  </div>
</div>

<style>
  .gaze-page {
    background: hsl(var(--background));
    color: hsl(var(--foreground));
  }

  .columns-container {
    align-items: flex-start;
  }

  /* Mobile: Stack all columns vertically */
  @media (max-width: 767px) {
    .columns-container {
      flex-direction: column;
    }

    .column-small,
    .column-full {
      width: 100%;
    }
  }

  /* Desktop: Apply size constraints */
  @media (min-width: 768px) {
    .column-small {
      width: 300px;
      flex-shrink: 0;
    }

    .column-full {
      flex: 1;
      min-width: 0; /* Prevent flex item overflow */
    }
  }
</style>
