---
import '../styles/globals.css'
import { getCollection } from 'astro:content'

const title = 'Gaze Dashboard'

// Fetch dashboard data from Content Collections
const dashboardEntries = await getCollection('dashboard')
const dashboardData = dashboardEntries[0]?.data
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Glance-like SSG Dashboard" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="min-h-screen p-4 md:p-8">
      <div class="max-w-7xl mx-auto">
        <header class="mb-8">
          <h1 class="text-4xl font-bold text-center mb-2">
            {title}
          </h1>
          {dashboardData?.timestamp && (
            <p class="text-center text-muted-foreground text-sm">
              Last updated: {new Date(dashboardData.timestamp).toLocaleString()}
            </p>
          )}
        </header>
      </div>
    </main>
  </body>
</html>
