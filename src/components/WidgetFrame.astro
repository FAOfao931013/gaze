---
/**
 * Reusable Widget Frame Component
 * Provides a consistent wrapper with header and glass card styling
 * Can be used by Widget.astro or directly by widgets that need nested frames (like split-column)
 */

interface Props {
  title?: string
  hideHeader?: boolean
  widgetType?: string
  widgetSlug?: string
}

const { title, hideHeader = false, widgetType, widgetSlug } = Astro.props
---

<div
  class="widget-wrapper"
  data-widget-type={widgetType}
  data-widget-slug={widgetSlug}
>
  {/* Widget Header - Outside the card */}
  {!hideHeader && title && (
    <div class="widget-header px-1 pb-1.5">
      <h2 class="text-xs font-semibold text-white/50 uppercase tracking-wider">{title}</h2>
    </div>
  )}

  {/* Widget Content - Inside the card */}
  <div class="widget-content glass rounded-lg overflow-hidden p-3">
    <slot />
  </div>
</div>

<style>
  .widget-wrapper {
    height: fit-content;
  }
</style>
